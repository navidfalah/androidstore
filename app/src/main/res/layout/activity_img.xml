<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.imgActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="288dp"
        android:layout_marginTop="-121dp"
        android:layout_marginEnd="19dp"
        android:layout_toEndOf="@+id/imageView"
        android:background="@drawable/click_btn"
        android:fontFamily="@font/rubik_bold"
        android:onClick="buttonPickImage"
        android:text="pick image"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="178dp"
        android:layout_height="172dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="69dp"
        android:rotation="0"
        app:srcCompat="@color/blue1" />

    <EditText
        android:id="@+id/name_product"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-134dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:ems="10"
        android:fontFamily="@font/rubik_bold"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/price_product"
        android:layout_width="352dp"
        android:layout_height="61dp"
        android:layout_below="@+id/name_product"
        android:layout_alignStart="@+id/name_product"
        android:layout_alignEnd="@+id/name_product"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="3dp"
        android:drawableLeft="@drawable/ic_baseline_attach_money_2"
        android:ems="10"
        android:fontFamily="@font/rubik_bold"
        android:hint="price"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/seller_name_product"
        android:layout_width="351dp"
        android:layout_height="67dp"
        android:layout_below="@+id/editTextTextPersonName2"
        android:layout_alignStart="@+id/price_product"
        android:layout_alignEnd="@+id/price_product"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:ems="10"
        android:fontFamily="@font/rubik_bold"
        android:hint="SellerName"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/phone_number_seller_product"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/seller_name_product"
        android:layout_alignStart="@+id/seller_name_product"
        android:layout_alignEnd="@+id/seller_name_product"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:ems="10"
        android:fontFamily="@font/rubik_bold"
        android:hint="phone"
        android:inputType="textPersonName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_submit_product"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:layout_below="@+id/phone_number_seller_product"
        android:layout_alignStart="@+id/phone_number_seller_product"
        android:layout_alignEnd="@+id/phone_number_seller_product"
        android:layout_marginStart="89dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="95dp"
        android:background="@drawable/click_btn"
        android:fontFamily="@font/rubik_bold"
        android:text="submit"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number_seller_product"
        android:layout_alignStart="@+id/phone_number_seller_product"
        android:layout_alignEnd="@+id/phone_number_seller_product"
        android:layout_marginStart="0dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="7dp"
        android:ems="10"
        android:fontFamily="@font/rubik_bold"
        android:hint="Seller email"
        android:inputType="textPersonName"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="348dp"
        android:layout_height="63dp"
        android:layout_below="@+id/price_product"
        android:layout_alignStart="@+id/editTextTextPersonName"
        android:layout_alignEnd="@+id/editTextTextPersonName"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-6dp"
        android:drawableLeft="@drawable/ic_baseline_insert_chart_24"
        android:ems="10"
        android:fontFamily="@font/rubik_bold"
        android:hint="category"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="53dp"
        android:layout_height="61dp"
        android:layout_alignStart="@+id/name_product"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="-15dp"

        android:layout_toStartOf="@+id/imageView"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_black" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="367dp"
        android:layout_height="61dp"
        android:layout_below="@+id/phone_number_seller_product"
        android:layout_alignStart="@+id/editTextTextPersonName"
        android:layout_alignEnd="@+id/editTextTextPersonName"
        android:layout_marginStart="3dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="-7dp"
        android:drawableLeft="@drawable/ic_baseline_frequency"
        android:ems="10"
        android:fontFamily="@font/rubik_bold"
        android:hint="frequency"
        android:inputType="textPersonName" />


</RelativeLayout>